{
  "name": "agma.js",
  "version": "0.2.2",
  "description": "Access the public Agma.IO APIs with ease",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "docs": "npm run submodule && typedoc --theme node_modules/typedoc-neo-theme/bin/default --plugin typedoc-neo-theme",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "test": "jest --config jest.json",
    "test:gui": "majestic",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "submodule": "git submodule init && git submodule update --remote --merge",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agma-js/agma.js.git"
  },
  "keywords": [
    "agma.io",
    "typescript"
  ],
  "author": "Wynell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/agma-js/agma.js/issues"
  },
  "homepage": "https://github.com/agma-js/agma.js#readme",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.11.0",
    "eslint-plugin-jest": "^24.1.0",
    "jest": "^26.6.0",
    "majestic": "^1.7.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typedoc": "^0.19.2",
    "typedoc-neo-theme": "^1.0.10",
    "typescript": "^4.0.3"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "axios-mock-adapter": "^1.18.2",
    "axios": "^0.20.0"
  },
  "majestic": {
    "args": [
      "--config jest.json"
    ]
  }
}
